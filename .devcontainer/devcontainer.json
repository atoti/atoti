{
    "build": {
        "context": "..", // Refers to the parent directory of .devcontainer
        "dockerfile": "../docker/Dockerfile"
    },
    "containerEnv": {
        "UV_LINK_MODE": "copy"
    },
    "forwardPorts": [8888, 9092],
    "portsAttributes": {
        "8888": {
            "label": "jupyterlab"
        },
        "9092": {
            "label": "atoti"
        }
    },
    "postCreateCommand": "uv add jupyter-server-proxy && uv run jupyter-lab --ip=0.0.0.0 --allow-root --no-browser --IdentityProvider.token='' --ServerApp.password=''"
}
